<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">
    
    <ImageView
        android:id="@+id/liteListingThumbnail"
        android:layout_width="@dimen/grid_thumbnail_width"
        android:layout_height="@dimen/grid_thumbnail_height"
        android:clickable="true"
        android:scaleType="fitStart"
        android:focusable="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/liteListingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/overview_text_size"
            android:focusable="true" />

        <TextView
            android:id="@+id/liteListingPrice"
            android:layout_width="@dimen/price_box_length"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textSize="@dimen/overview_text_size" />

    </LinearLayout>

</LinearLayout>
